#!perl

use 5.010001;
use strict;
use warnings;
use Perinci::CmdLine 0.68;

# DATE
# VERSION

our %SPEC;

# add -V as the alias for --detail, for convenience
require App::osnames;
{
    no warnings;
    $App::osnames::SPEC{list_osnames}{args}{detail}{cmdline_aliases} = {V=>{}};
}

Perinci::CmdLine->new(
    log_any_app => 0,
    url => '/App/osnames/list_osnames',
)->run;

1;
# ABSTRACT: List possible Perl $^O ($OSNAME) values
# PODNAME: osnames

=head1 SYNOPSIS

 % osnames
 % osnames --detail; # or, -V


=head1 SEE ALSO

L<perlvar>

=cut
